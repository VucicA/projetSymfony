{% extends 'base.html.twig' %}

{% block title %}Disponnibilités{% endblock %}

{% block body %}
    <h1>Disponnibilités</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ dispo.id }}</td>
            </tr>
            <tr>
                <th>Start</th>
                <td>{{ dispo.start ? dispo.start|date('Y-m-d H:i:s') : '' }}</td>
            </tr>
            <tr>
                <th>End</th>
                <td>{{ dispo.end ? dispo.end|date('Y-m-d H:i:s') : '' }}</td>
            </tr>
            <tr>
                <th>Descripttion</th>
                <td>{{ dispo.description }}</td>
            </tr>
            <tr>
                <th>All_day</th>
                <td>{{ dispo.allDay ? 'Yes' : 'No' }}</td>
            </tr>
            <tr>
                <th>Intervenant</th>
                <td>{{ dispo.idInter.IdUsers.nom }}</td>
            </tr>
        </tbody>
    </table>

    <a href="{{ path('disponnibilite') }}">back to list</a>

    <a href="{{ path('disponnibilite_edit', {'id': dispo.id}) }}">edit</a>

    {{ include('dispo/_delete_form.html.twig') }}
